
<div class="flex flex-wrap justify-center">
  <% @products.each do |product| %>
    <%= link_to product, class: "max-w-sm bg-white shadow-md rounded-lg p-6 m-4" do %>
      <%= image_tag("image.jpg", class:"w-full rounded-lg mb-4") %>
      <p class="text-gray-700"><%= product.name %></p>
    <% end %>
<% end %>
</div>
    


<div>
<% if customer_signed_in? || admin_signed_in? %>
  <%= link_to "Sign Out", destroy_customer_session_path, 'data-turbo-method': :delete %>

<% elsif admin_signed_in? %>
  <%= link_to "Add new product", new_product_path %>
<% else %>
  <p>Hey</p>
<% end %>
</div>


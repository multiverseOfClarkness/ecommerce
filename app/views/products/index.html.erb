
<div class="flex flex-wrap justify-center">
  <% @products.each do |product| %>
    <div class="max-w-sm bg-white shadow-md rounded-lg p-6 m-4">
    <%= image_tag("image.jpg", class:"w-full rounded-lg mb-4") %>
    <p class="text-gray-700"><%= link_to product.name, product %></p>
    </div>  
<% end %>
</div>
    


<div>
<% if customer_signed_in? || admin_signed_in? %>
  <%= link_to "Sign Out", destroy_customer_session_path, 'data-turbo-method': :delete %>

<% elsif admin_signed_in? %>
  <%= link_to "Add new product", new_product_path %>
<% else %>
  <p>Hey</p>
<% end %>
</div>



<div class="flex flex-wrap justify-center bg-slate-200 absolute ">
  <% @products.each do |product| %>
    <%= link_to product, class: "max-w-sm bg-white shadow-md rounded-lg p-6 m-4 hover:bg-sky-200" do %>
      <%= image_tag("image.png", class:"w-full rounded-lg mb-4 hover:bg-sky-200") %>
      <p class="text-gray-700"><%= product.name %></p>
    <% end %>
  <% end %>
  
</div>



    





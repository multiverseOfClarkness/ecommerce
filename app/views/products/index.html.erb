<div>
  <div class="flex flex-wrap grid-cols-3 max-w-screen-xl px-4 mx-auto md:items-center md:justify-between md:flex-row md:px-6 lg:px-8">
  <% @products.each do |product| %>
    <div class="p-4 mx-8 bg-red-500">
    <%= link_to product.name, product %>
    </div>
  <% end %>
  <br /> 
  </div>

  <div>
  <% if customer_signed_in? || admin_signed_in? %>
    <%= link_to "Sign Out", destroy_customer_session_path, 'data-turbo-method': :delete %>

  <% elsif admin_signed_in? %>
    <%= link_to "Add new product", new_product_path %>
  <% else %>
    
  <% end %>
  </div>

</div>
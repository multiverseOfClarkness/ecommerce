<div class="flex flex-wrap flex-col items-center border-2 border-gray-400 p-11 my-2 rounded mx-10">
  <div class="flex-initial h-5 m-3 ">
    <h1 class="text-gray-500 text-3xl font-mono font-bold "><%= @product.name%></h1>
  </div>
  <div class="flex-initial h-6 m-3">
    <p class="text-xl">Description: <%= @product.description %></p>
  </div>
  <div class="flex-initial h-6 m-3 text-orange-500">
    <p class="text-xl">PHP <%= @product.price %></p>
  </div>
  <div class="flex-initial h-6">
    <p class="text-sm">Stocks Left: <%= @product.quantity %></p>
  </div>


  <div class="flex-wrap flex-initial h-6 m-2">
    
    
    <% if admin_signed_in? %>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
      <%= link_to "Edit", edit_product_path %>
      </button>
    
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">

      <%= link_to "Destroy", product_path(@product), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } %> <br>
      </button>

      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">

        <%= link_to "Return", products_path %>
      </button>

    <% elsif user_signed_in? %>  
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
        <%= link_to "Return", products_path %>
      </button>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
        <%= link_to "Add to cart", products_path %>
      </button>
    <% else %>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
        <%= link_to "Return", products_path %>
      </button>
    <% end %>
    
  </div>
</div>

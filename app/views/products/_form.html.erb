<%= form_with model: product do |form| %>
<div class="flex justify-center items-center bg-slate-200 ">
  <div class="bg-white p-8 m-3 shadow-md rounded-md">
  <h2 class="text-2xl font-bold mb-4">Add New Product</h2>
  <div class="mb-2">
    <%= form.label :name, class: 'block text-gray-700 font-semibold' %>
    <%= form.text_field :name, class: 'border border-gray-300 rounded px-3 py-2 w-full' %>
    <% product.errors.full_messages_for(:name).each do |message| %>
      <div class="text-red-500"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: 'block text-gray-700 font-semibold mb-2'%>
    <%= form.text_area :description, class: 'border border-gray-300 rounded px-3 py-2 w-full' %>
    <% product.errors.full_messages_for(:description).each do |message| %>
      <div class="text-red-500"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :price, class: 'block text-gray-700 font-semibold mb-2'%>
    <%= form.text_area :price, class: 'border border-gray-300 rounded px-3 py-2 w-full' %>
    <% product.errors.full_messages_for(:price).each do |message| %>
      <div class="text-red-500"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :quantity, class: 'block text-gray-700 font-semibold mb-2'%>
    <%= form.text_area :quantity, class: 'border border-gray-300 rounded px-3 py-2 w-full' %>
    <% product.errors.full_messages_for(:quantity).each do |message| %>
      <div class="text-red-500"><%= message %></div>
    <% end %>
  </div>
    <div class="mt-3 flex justify-end ">
  <%= form.submit "Create",class: "bg-green-500 hover:bg-green-700 text-white font-semibold py-2 px-4 ml-1 rounded "%>
<% end %>
    
    
      <% return_btn = "bg-green-500 hover:bg-green-700 text-white font-semibold py-2 px-4 ml-1 rounded" %>
      <%= link_to "Cancel", products_path, class: return_btn %>
    </div>
    
  </div>
</div>